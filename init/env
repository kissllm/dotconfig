# https://github.com/caenrique/nvim-toggle-terminal
_v () {
    NVIM=`which nvim`
    if test -z $NVIM_LISTEN_ADDRESS; then
        $NVIM $@
    else
        if test -z $@; then
            nvr -l -c new
        else
            nvr -l $@
        fi
    fi
}
alias v=_v
export EDITOR=v

