# https://stackoverflow.com/questions/3701809/how-to-detect-using-of-wildcard-asterisk-as-parameter-for-shell-script
glob_stop() {
    [ "$2" = "*" ] && {
        echo "You can not use a wildcard"
        return
    }
    set +f
    "$@";
}
alias q="set -f; glob_stop /mnt/local/bin/q"

